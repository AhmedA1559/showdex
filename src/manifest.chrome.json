{
  "manifest_version": 3,

  "name": "Showdex",
  "version": "<-- auto-filled; do not edit -->",
  "description": "<-- auto-filled; do not edit -->",
  "author": "<-- auto-filled; do not edit -->",
  "homepage_url": "<-- auto-filled; do not edit -->",

  "permissions": [],

  "host_permissions": [
    "https://pkmn.github.io/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://play.pokemonshowdown.com/*",
        "*://dawn.psim.us/*",
        "*://smogtours.psim.us/*",
        "*://sports.psim.us/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": [
        "*://play.pokemonshowdown.com/*",
        "*://dawn.psim.us/*",
        "*://smogtours.psim.us/*",
        "*://sports.psim.us/*"
      ],
      "resources": [
        "bug.svg",
        "clipboard-heart.svg",
        "donate-mask.svg",
        "github-face.svg",
        "info-circle.svg",
        "main.js",
        "remove-circle.svg",
        "showdex.svg",
        "signpost.svg",
        "sparkle.svg",
        "sword.svg",
        "tize.svg"
      ]
    }
  ],

  "icons": {
    "16": "showdex-16.png",
    "24": "showdex-24.png",
    "32": "showdex-32.png",
    "48": "showdex-48.png",
    "128": "showdex-128.png"
  },

  "action": {
    "default_title": "Showdex",
    "default_icon": {
      "16": "showdex-16.png",
      "24": "showdex-24.png",
      "32": "showdex-32.png",
      "48": "showdex-48.png",
      "128": "showdex-128.png"
    }
  },

  "externally_connectable": {
    "ids": [
      "*"
    ],
    "matches": [
      "*://play.pokemonshowdown.com/*",
      "*://dawn.psim.us/*",
      "*://smogtours.psim.us/*",
      "*://sports.psim.us/*"
    ]
  }
}
